
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="h4 text-gray-900 mb-4">Punto de venta</h1>
<ul class="nav nav-tabs">
    <li class="nav-item"><a href=""  data-target="#Consulta" data-toggle="tab" class="nav-link small text-uppercase active consultaData">Consulta</a></li>
    <li class="nav-item"><a href="" data-target="#Matenimiento" data-toggle="tab" class="nav-link small text-uppercase mantenimientoData">Matenimiento</a></li>
</ul>
<br>
<div id="tabsContent" class="tab-content">
    <div id="Consulta" class="tab-pane fade active show">
        <!-- Topbar Search -->
        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search row">
            <div class="input-group">
                <input type="text" class="form-control bg-light border-0 small txt-PuntoVenta" placeholder="Buscar..."
                       aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary searchbtn" type="button">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>
        <!-- Divider -->
        <hr class="sidebar-divider">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Registros de punto de venta</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTablePuntoVenta" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Estatus</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="Matenimiento" class="tab-pane fade">
        <div class="row pb-2">
            <div class="container">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                       
                                    </div>
                                    <form class="user">
                                       
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="txtDescripcion"
                                                   placeholder="Punto de venta(*)">
                                        </div>
                                    
                                        <hr>
                                        <!-- Circle Buttons -->
                                        <div class="">
                                            
                                            <div class="text-center">
                                                <button type="button" class="btn btn-danger CancelarFrm">Cancelar</button>
                                                <button type="button" class="btn btn-success btnGuardarFrm">Guardar</button>
                                                <button type="button" class="btn btn-info btnRetornarFrm">Retornar</button>
                                            </div>
                                        </div>
                                    </form>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<button type="button" class="btn btn-outline-primary btn-lg btnNuevo"><i class="fas fa-plus"></i> Nuevo</button>
<button type="button" class="btn btn-outline-secondary btn-lg btnActualizar"><i class="fas fa-pen"></i> Actualizar</button>
<button type="button" class="btn btn-outline-success btn-lg btEliminar"><i class="fas fa-trash-alt"></i> Eliminar</button>
<button type="button" class="btn btn-outline-info btn-lg btnReporte"><i class="fas fa-file-signature"></i> Reporte</button>
<button type="button" class="btn btn-outline-danger btn-lg btnSalir"><i class="fas fa-sign-out-alt"></i> Salir</button>



